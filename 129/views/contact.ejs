<div class="container mt-3" >
	<div class="row">
		<div class="col-md-8">
			<h2>Contact Registration</h2>
			<table class="table">
				<thead>
					<tr class="table-primary">
						<th scope="col">#</th>
						<th scope="col">Name</th>
						<th scope="col">Phone No.</th>
						<th scope="col">Action</th>
					</tr>
				</thead>
				<tbody>
					 <% let no = 1; %>
						<% contacts.forEach((contact, i) => { i++ %>
							<tr>
								<th scope="row"><%= i++ %></th> 
								<td><%= contact.name %></td>
								<td><%= contact.phoneno %></td>
								<td>
									<!-- 1st, we pass link to contact page at href below. To prevent it to go to contact route at app.js, we passed a param (we don't have id in json and name cannot be similar eventhough it's not practical). We assume that we are passing name with ejs syntax after contact -->
									<a href="/contact/<%= contact.name  %>" class="btn btn-success badge rounded-pill"><i class="bi bi-info-circle"></i> detail</a>
								</td>
								<!-- 2nd, run the app and refresh the contact. Drag the cursor to both detail buttons for adrian and hafizah, and look at bottom left. It will show you the url for both contact names -->
								 <!-- 3rd, we organise the route at 130 -->
							</tr>
						<% }) %>
				</tbody>
			</table>
		</div>
	</div>
</div>