<div class="container mt-3" >
	<div class="row">
		<div class="col-md-8">
			<h2>Contact Registration</h2>
			<table class="table">
				<thead>
					<tr class="table-primary">
						<th scope="col">#</th>
						<th scope="col">Name</th>
						<th scope="col">Phone No.</th>
						<th scope="col">Action</th>
					</tr>
				</thead>
				<tbody>
					 <% let no = 1; %>
						<% contacts.forEach((contact, i) => { i++ %>
							<tr>
								<th scope="row"><%= i++ %></th> 
								<td><%= contact.name %></td>
								<td><%= contact.phoneno %></td>
								<td>						
									<a href="/contact/<%= contact.name  %>" class="btn btn-success badge rounded-pill"><i class="bi bi-info-circle"></i> detail</a>
								</td>					
							</tr>
						<% }) %>
				</tbody>
			</table>
		</div>
	</div>
</div>