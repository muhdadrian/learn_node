<div class="container mt-3" >
	<div class="row">
		<div class="col-md-8">
			<h2>Contact Registration</h2>
				<a href="/contact/add" class="btn btn-primary mb-2">Add Contact Data</a>

				<!-- 1st, we add length. If there's no writing in msg var, we will not display the alert. If we add a new data, the flash msg will be displayed. But, it will be gone when we refresh the page. -->
				 <% if (msg.length !== 0) { %>
					<div class="alert alert-success" role="alert"><%= msg %></div>
				 <% } %>
		
			<table class="table">
				<thead>
					<tr class="table-primary">
						<th scope="col">#</th>
						<th scope="col">Name</th>
						<th scope="col">Phone No.</th>
						<th scope="col">Action</th>
					</tr>
				</thead>
				 <% if (contacts.length === 0) { %>
					<tr>
						<td colspan="4">
							<div class="alert alert-danger fw-bold" role="alert">
								The contact data is empty! 
							</div>
						</td>
					</tr>
				 <% } %>
				<tbody>
					 <% let no = 1; %>
						<% contacts.forEach((contact, i) => { i++ %>
							<tr>
								<th scope="row"><%= i++ %></th> 
								<td><%= contact.name %></td>
								<td><%= contact.phoneno %></td>
								<td>						
									<a href="/contact/<%= contact.name  %>" class="btn btn-success badge rounded-pill"><i class="bi bi-info-circle"></i> detail</a>
								</td>					
							</tr>
						<% }) %>
				</tbody>
			</table>
		</div>
	</div>
</div>